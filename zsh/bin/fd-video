#!/bin/zsh

# Search for video files with specific extensions, case-insensitive
fd --absolute-path \
  --color=never \
  --ignore-case \
  --type=file \
  --extension mp4 \
  --extension avi \
  --extension mkv \
  --extension mov \
  --extension webm \
  --extension webp \
  --extension m4v \
  --extension mpg \
  --extension mpeg \
  "$@"
