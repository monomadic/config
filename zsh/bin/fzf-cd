#!/bin/zsh

# TODO:
# - add jump locations (marks)
#		- media locations (creators, tags) if present
# - add pwd recursive jump
# - shortcuts for switching between pwd and marks
# - shortcuts for reveal in finder
# - fix bug when ctrl+c

set +o monitor

handle_directory_selection() {
  local timeout=30
  local pipe=$(mktemp -u)
  mkfifo "$pipe"

  cleanup() {
    local exit_code=$?
    # More graceful process termination
    jobs -p | while read pid; do
      kill -TERM "$pid" 2>/dev/null || true
    done
    rm -f "$pipe"
    trap - INT TERM EXIT
    return $exit_code
  }

  trap cleanup INT TERM EXIT

  # Debug the input
  echo "Debug: Starting input process..." >&2

  if [[ $# -gt 0 ]]; then
    (printf "%s\n" "$@" | tee >(cat >&2) >"$pipe") &
  else
    (cat | tee >(cat >&2) >"$pipe") &
  fi

  local input_pid=$!

  echo "Debug: Running fzf..." >&2

  local dir=$(fzf --ansi \
    --preview 'tree -C {} 2>/dev/null || lsd --icon always --long --depth 1 --ignore-config --group-directories-first --color always {}' \
    --bind 'ctrl-d:preview-page-down,ctrl-u:preview-page-up' \
    --bind 'ctrl-/:toggle-preview' \
    --bind 'alt-p:toggle-preview' \
    --height=50% \
    --reverse \
    --border \
    --prompt="cd " <"$pipe" 2>/dev/null)

  local ret=$?

  echo "Debug: fzf completed with status $ret" >&2

  kill $input_pid >/dev/null 2>&1
  wait $input_pid 2>/dev/null

  cleanup

  if [[ $ret -eq 0 && -n "$dir" ]]; then
    echo "$dir"
  fi
  return $ret
}

handle_directory_selection "$@"
