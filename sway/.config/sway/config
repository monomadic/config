bar {
  id bar-0
  swaybar_command waybar
  position bottom
  # hidden_state hide
  mode hide
  modifier Mod1

  colors {
    background #000000AA
    focused_workspace $barColor $barColor #111111
    inactive_workspace #000000 #000000 $barColor
    active_workspace #111111 #111111 #888888
  }
}

# keyboard, touchpad

