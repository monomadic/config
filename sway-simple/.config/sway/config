# Sway Configuration

# Polybar
# exec --no-startup-id polybar --reload --config=$HOME/.config/polybar/grayblocks/config.ini main

### Keymaps
set $win Mod4
set $alt Mod1
set $mod $alt

floating_modifier $mod normal

### Inputs
#
# Names of inputs: swaymsg -t get_inputs
# See `man 5 sway-input` for more information about this section.
#
input type:touchpad {
      dwt enabled
      tap enabled
      natural_scroll enabled
}

input type:mouse {
      accel_profile flat # adaptive|flat
      pointer_accel 0
      dwt disabled # disable-while-typing
      tap enabled
      natural_scroll enabled # inverted scroll
}

input type:keyboard {
  xkb_options caps:escape
  xkb_layout "us"
  repeat_delay 300
  repeat_rate 30
}

### Outputs
#
# eg. output HDMI-A-1 resolution 1920x1080 position 1920,0
# Names of outputs: swaymsg -t get_outputs
#
#output * bg $background fill
output * bg #111111 solid_color

# enable modes
include modes/*

# only enable this if every app you use is compatible with wayland
xwayland disable

include $config_path/autostart/*


focus_follows_mouse no
